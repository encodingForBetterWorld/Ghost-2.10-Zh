<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> 上一篇</a>
    {{/if}}
    <span class="page-number">第 {{page}} 篇  共 {{pages}} 篇</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">下一篇 <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>
